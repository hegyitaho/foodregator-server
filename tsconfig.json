{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2019",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "^src/(.*)$": ["./src/*"],
      "^test/(.*)$": ["./test/*"],
      "^test-resources/(.*)$": ["./test-resources/*"],
   },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "jsx": "preserve",
    "watch": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "incremental": true
  },
  "include": [
    "src",
    "test"
  ],
}